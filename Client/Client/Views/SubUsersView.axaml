<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:viewModels="clr-namespace:Client.ViewModels"
             x:Class="Client.Views.SubUsersView"
			 x:DataType="viewModels:SubUsersViewModel">
	
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		 to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<viewModels:SubUsersViewModel />
	</Design.DataContext>
	
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Resources/Geometries.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<UserControl.Styles>
		<StyleInclude Source="/Resources/Styles.axaml" />
	</UserControl.Styles>

	<Border CornerRadius="15" Margin="5" Padding="4">
		<Border.Background>
			<LinearGradientBrush StartPoint="0%, 0%" EndPoint="100%, 100%">
				<GradientStop Offset="0" Color="#f6f6f6" />
				<GradientStop Offset="1" Color="#dffaff" />
			</LinearGradientBrush>
		</Border.Background>
		
		<ItemsControl ItemsSource="{Binding SubUsers}">
			<ItemsControl.DataTemplates>
				<DataTemplate DataType="viewModels:SubUserItemTemplate">
					<Border Padding="10" Margin="10" Background="#ebfaf8" CornerRadius="15" HorizontalAlignment="Left"
					        BorderBrush="LightGray" BorderThickness="1.2" Width="620">
						<Grid ColumnDefinitions="Auto, Auto, Auto, Auto, *, Auto" ColumnSpacing="25">
							<Border CornerRadius="100" Background="#cbf4e5"
							        BorderBrush="#c9dbd4" BorderThickness="0.8" Padding="15">
								<PathIcon Data="{StaticResource PersonRegular}" Width="35" Height="35" />
							</Border>

							<Grid Grid.Column="1" RowDefinitions="*, Auto" RowSpacing="10">
								<TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"
								           Text="{Binding UserName}" />
								
								<Button Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Opacity="0.75"
								        CornerRadius="8" FontWeight="Bold" FontSize="15" Padding="19, 4">
									Login
								</Button>
							</Grid>

							<Button Grid.Column="2" CornerRadius="5" Opacity="0.8" VerticalAlignment="Top" Padding="6, 3">
								<Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
									<TextBlock Foreground="Black" VerticalAlignment="Center">Permissions</TextBlock>
									
									<PathIcon Grid.Column="1" Data="{StaticResource CaretDownRegular}" Width="16" 
									          Foreground="Black" VerticalAlignment="Center"/>
								</Grid>
								
								<Button.Flyout>
									<Flyout>
										
									</Flyout>
								</Button.Flyout>
							</Button>
							
							<StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Top" Spacing="10" Margin="0, 3.2, 0, 0">
								<TextBlock FontWeight="Bold" FontSize="15" VerticalAlignment="Center">Created at:</TextBlock>
								<TextBlock FontSize="15" VerticalAlignment="Center" Text="{Binding Created}" />
							</StackPanel>
							
							<Button Grid.Column="5" VerticalAlignment="Top" CornerRadius="6" Padding="5, 3" Opacity="0.8">
								<PathIcon Data="{StaticResource CaretDownRegular}" Width="17" />
							</Button>
						</Grid>
					</Border>
				</DataTemplate>
			</ItemsControl.DataTemplates>
		</ItemsControl>
	</Border>
</UserControl>
